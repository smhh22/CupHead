<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cuphead.View.SettingsController"
            prefHeight="720" prefWidth="1280"
            stylesheets="@../css/settings.css">

    <center>
        <VBox>
            <GridPane>
                <Label text="Difficulty Level:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ChoiceBox fx:id="difficultyBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Mute:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <CheckBox fx:id="isMute" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <HBox>
                <Button id="cancel" text="Cancel" onMouseClicked="#cancel"/>
                <Button id="apply" text="Apply" onMouseClicked="#apply"/>
                <Button id="logout" text="Logout" onMouseClicked="#logout"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
